<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/meals/new.css">
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form id="new-meal-form" action="/meals" method="POST">
    <label for="meal-input">Meal:</label>
    <input type="text" name="name" id="meal-input">
    <button type="submit">Add Meal</button>
  </form>
  <% if (meals.length) { %>
    <table>
      <thead>
        <tr>
          <th>Meal</th>
        </tr>
      </thead>
      <tbody>
        <% meals.forEach(function(meal) { %>
          <tr>
            <td><%= meal.name %></td>
          </tr>
        <% }) %>
        <% } %>
      </tbody>
    </table>
</main>

<%- include('../partials/footer') %>